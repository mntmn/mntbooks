<html>
  <head>
    <%= erb :style %>
  </head>
  <body>
    <%= erb :menu, :locals => { :active => :invoices, :prefix => prefix } %>
    <form action="/todo" method="POST">
      <table>
        <tr>
          <th>Date</th>
          <th>Cr</th>
          <th class="amount">Amt</th>
          <th>Debit</th>
          <th>Credit</th>
          <th class="details">Name</th>
          <th>Receipt</th>
        </tr>
        <% months.keys.each do |mk| %>
        <% months[mk][:invoices].each do |b| %>
        <tr>
          <td class="date"><%= b[:date] %></td>
          <td class="amount"><%= b[:currency] %></td>
          <td class="amount"><%= '%.2f' % (b[:amount_cents]/100.0) %></td>
          <td><%= b[:debit_account] %></td>
          <td><%= b[:credit_account] %></td>
          <td class="details"><% if b[:invoice_company].size>0 %><%= b[:invoice_company] %><br><% end %><%= b[:invoice_name] %></td>
          <td>
            <% b[:receipt_urls].each do |r| %>
            <a href="<%= r %>"><%= r %></a>
            <% end %>
          </td>
        </tr>
        <% end %>
        <tr class="month-row">
          <td class="date"></td>
          <td></td>
          <td class="amount"><%= '%.2f' % (months[mk][:sum_cents]/100.0) %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        <% end %>
        
      </table>
    </form>
  </body>
</html>
